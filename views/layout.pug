doctype
html(lang='en' data-bs-theme="auto")
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    //- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    meta(name='description', content='Mondu Integration')
    meta(name='author', content='Hannes Reinberger')
    link(rel='icon', href='/images/MonduFav.webp', type='image/webp')
    title Mondu Demo Integration
    //- Bootstrap core CSS with Mondu styling
    link(href='/stylesheets/style.css', rel='stylesheet')
    link(href='../stylesheets/checkout.css' rel='stylesheet')
  body
    nav.navbar.navbar-expand
      .container-fluid
        a(class="navbar-brand" href="/") 
          img(src='/images/logo.svg' alt='Mondu Logo' height='20').d-inline-block.align-text-top
          |
          |
          Mondu Demo Integration
        button(class="navbar-toggler" type="button"
            data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false"
            aria-label="Toggle navigation")
          span(class="navbar-toggler-icon")
        div(class="collapse navbar-collapse" id="navbarNavAltMarkup")
          div(class="navbar-nav")
            a(class="nav-link" href="/checkout") Checkout
            a(class="nav-link" href="/orders") Orders
            a(class="nav-link" href="/webhooks") Webhooks
            a(class='nav-link' href="https://github.com/hreinberger/mondu-node") Github Repo
    //- view content starts here
    block content
    footer.my-5.pt-5.text-center.text-small
      p.mb-1.text-muted &copy; 2023 Mondu
      p.mb-1.text-body-tertiary This site is not part of Mondu's official product offering. Use at your own risk.
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous" defer="")
